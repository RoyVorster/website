<html>
<head>
    <title>Roy Vorster</title>
    <link rel="stylesheet" href="./theme.css">
    <style>
        #main_page {
            margin: 0px 7.5% 0px 1%;
            overflow: auto;
        }


        /* Text input */
        .input_main {
            order: 2;
            width: 85%;
            margin-left: 2%;
        }

        .input_main {
            margin-top: -15px;
        }


        /* Content */
        .main_singleton {
            display: flex;
            flex-direction: row;
            justify-content: flex-start;

            margin: 20px 0px 20px 0px;
        }

        .article_content {
            order: 2;
            padding-left: 2%;
            border-left: 1px solid black;
            width: 85%;
        }

        .article_meta {
            order: 1;
            width: 13%;
        }
    </style>

    <script>
        if (window.history.replaceState) { window.history.replaceState(null, null, window.location.href); }
    </script>

</head>
<body>
    <section id="main_page">
        <!-- Textarea -->
        <form method='POST'>
            <div class="main_singleton">
                <div class="article_meta"></div>
                <textarea class="input_main" name="input" rows=10></textarea>
            </div>

            <!-- Button -->
            <div class="main_singleton">
                <div class="article_meta"></div>
                <button class="input_main">Submit</button>
            </div>
        </form>

        <!-- Notes -->
        {% for note in notes %}
        <div class="main_singleton">
            <br style="clear: both;"/>
            <div class="article_content">
                {{ note.text }}
            </div>

            <div class="article_meta">
                No. {{ loop.length - loop.index + 1 }} <br>
                {{ note.date }} <br>
                {{ note.time }}
            </div>
        </div>
        {% endfor %}
    </section>
</body>
</html>
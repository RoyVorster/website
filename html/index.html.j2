<html>
<head>
    <title>Roy Vorster</title>
    <link rel="stylesheet" href="./theme.css">
    <style>
        #main_page {
            margin: 0px 7% 0px 3%;
            overflow: auto;
        }


        /* Text input */
        .input_main {
            order: 2;
            width: 92%;
            margin-left: 2%;
        }

        .input_main {
            margin-top: -15px;
        }


        /* Content */
        .main_singleton {
            display: flex;
            flex-direction: row;
            justify-content: flex-start;

            margin: 20px 0px 20px 0px;
        }

        .article_content {
            order: 2;
            padding-left: 2%;
            border-left: 1px solid black;
            width: 92%;
        }

        .article_meta {
            order: 1;
            width: 8%;
        }
    </style>
</head>
<body>
    <section id="main_page">
        <!-- Textarea -->
        <div class="main_singleton">
            <div class="article_meta"></div>
            <textarea class="input_main" rows=10></textarea>
        </div>

        <!-- Button -->
        <div class="main_singleton">
            <div class="article_meta"></div>
            <button class="input_main">Submit</button>
        </div>

        <!-- Notes -->
        {% for note in notes %}
        <div class="main_singleton">
            <br style="clear: both;"/>
            <div class="article_content">
                {{ note.text }}
            </div>

            <div class="article_meta">
                No. {{ loop.index }} <br>
                {{ note.date }}
            </div>
        </div>
        {% endfor %}
    </section>
</body>
</html>